
@{
    ViewBag.Title = "İletişim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="contact">
    <div class="wrap">
        <div class="contact-top">
            <h3>Bizimle İletişime Geçin</h3>
        </div>
        <div class="form">
            <form class="cmxform" id="contactForm" method="post" action="@Url.Action("Message","Contact")">
                <div>
                    <input type="text" class="textbox" name="AdSoyad" value="Ad Soyad:" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Ad Soyad';}">
                </div>
                <div>
                    <input type="text" class="textbox" name="Mail" value="Email:" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Email';}">
                </div>
                <div>
                    <input type="text" class="textbox" name="Konu" value="Konu:" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Konu';}">
                </div>
                <div class="form1">
                    <div>
                        <textarea value="Mesaj:" name="Mesaj" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Mesaj';}">Mesaj:</textarea>
                    </div>
                </div>
                <div>
                    <button type="submit" class="read">Gönder</button>
                </div>
            </form>
        </div>
        <div class="clear"></div>
    </div>
</div>

