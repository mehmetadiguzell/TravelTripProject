@model List<TravelTripProject.Models.Classes.Blog>
@{
    ViewBag.Title = "Anasayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/js/responsiveslides.min.js"></script>

<script>
    // You can also use "$(window).load(function() {"
    $(function () {
        // Slideshow 1
        $("#slider1").responsiveSlides({
            auto: true,
            nav: true,
            speed: 500,
            namespace: "callbacks",
        });
    });
</script>
<div class="header-banner">
    <div class="wrap">
        <div class="banner">
            <div class="indent">
                <h2 class="indent-left margin-bot">Tatil Seyahat Bloğu</h2>
                <div class="banner-left">
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/Content/images/glass.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Restoranlar</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/Content/images/flight.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Uçuşlar</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/Content/images/group.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Etkinlikler</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/Content/images/key.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Araç Kiralama</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="header_bottom_right_images">
                    <div class="slider" style="width:650px;height:400px">
                        <ul class="rslides" style="width:650px;height:400px" id="slider1">
                            @foreach (var resim in Model)
                            {
                                <li><img src="@resim.BlogImage" alt=""></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>

    </div>
</div>
<div class"content">
    <div class="wrap">
        <div class="wrapper">
            <div class="con-top">
                <h3>Tatil Seyahat Bloğu Projesi</h3>
                <p>Asp.net mvc5 codefirst ile geliştirildi</p>
            </div>
            @Html.Action("PartialSol", "Home")
            <div class="grids">
                <div class="box1">
                    @Html.Action("TopBlog", "Home")
                    @Html.Action("TopPlacesLeft", "Home")
                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
</div>