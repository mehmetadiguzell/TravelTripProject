@model List<TravelTripProject.Models.Classes.Iletisim>
@{
    ViewBag.Title = "Mesajlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Mesajlar</h2>
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad Soyad</th>
            <th>Mail</th>
            <th>Konu</th>
            <th>Mesaj</th>
            <th>Sil</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>@item.Id</td>
                <td>@item.AdSoyad</td>
                <td>@item.Mail</td>
                <td>@item.Konu</td>
                <td>@item.Mesaj</td>
                <td><a href="@Url.Action("MesajSil","Admin",new { Id=item.Id})" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </tbody>
</table>


