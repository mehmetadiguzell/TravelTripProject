@model List<TravelTripProject.Models.Classes.Hakkimizda>
@{
    ViewBag.Title = "Hakkimizda";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkimizda</h2>
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Image</th>
            <th>Açıklama</th>
            <th>Güncelle</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>@item.Id</td>
                <td>
                    <img src="@item.FotoUrl" style="height:200px;width:200px"/>
                </td>
                <td>@item.Aciklama</td>
                <td><a href="@Url.Action("HakkimizdaFormu","Admin",new { Id=item.Id})" class="btn btn-primary">Güncelle</a></td>
            </tr>
        }


    </tbody>
</table>
